{
  "name": "@feathersjs/feathers",
  "description": "A framework for real-time applications and REST API with JavaScript and TypeScript",
  "version": "5.0.0-pre.18",
  "homepage": "http://feathersjs.com",
  "repository": {
    "type": "git",
    "url": "git://github.com/feathersjs/feathers.git",
    "directory": "packages/feathers"
  },
  "keywords": [
    "feathers",
    "REST",
    "socket.io",
    "realtime"
  ],
  "module": "./esm/index.js",
  "main": "./lib/index.js",
  "types": "./lib/index.d.ts",
  "exports": {
    ".": {
      "import": "./esm/index.js",
      "require": "./lib/index.js",
      "types": "./lib/index.d.ts"
    }
  },
  "author": {
    "name": "Feathers contributors",
    "email": "hello@feathersjs.com",
    "url": "https://feathersjs.com"
  },
  "license": "MIT",
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/daffl"
  },
  "bugs": {
    "url": "https://github.com/feathersjs/feathers/issues"
  },
  "directories": {
    "lib": "lib"
  },
  "files": [
    "CHANGELOG.md",
    "LICENSE",
    "README.md",
    "src/**",
    "esm/**",
    "lib/**",
    "*.d.ts",
    "*.js"
  ],
  "scripts": {
    "write-version": "node -e \"console.log('export default \\'' + require('./package.json').version + '\\';')\" > src/version.ts",
    "reset-version": "node -e \"console.log('export default \\'development\\';')\" > src/version.ts",
    "prepublish": "npm run compile",
    "version": "npm run write-version",
    "publish": "npm run reset-version",
    "compile:esm": "shx rm -rf esm/ && tsc --target es2020 --module es2020 --outDir esm/",
    "compile:lib": "shx rm -rf lib/ && tsc --outDir lib/",
    "compile": "npm run compile:lib && npm run compile:esm",
    "test": "mocha --config ../../.mocharc.json --recursive test/"
  },
  "engines": {
    "node": ">= 14"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@feathersjs/commons": "^5.0.0-pre.18",
    "@feathersjs/hooks": "^0.7.3",
    "events": "^3.3.0"
  },
  "devDependencies": {
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.23",
    "mocha": "^9.2.2",
    "shx": "^0.3.4",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.3"
  },
  "gitHead": "c0b7b67d872dcd6b6d94e4587f21332c8a519b50"
}
